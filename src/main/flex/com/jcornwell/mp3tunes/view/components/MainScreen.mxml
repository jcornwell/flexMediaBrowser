<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns="*"
	width="100%" height="100%"
	creationComplete="dispatchEvent( new Event( CREATION_COMPLETE ) )">
	<mx:Script>
		<![CDATA[
		public static const CREATION_COMPLETE: String = "myCreationComplete";
		
		[Bindable]
		public var myText1:String = "";
		[Bindable]
		public var myText2:String = "";
		[Bindable]
		public var myText3:String = "";
		[Bindable]
		public var myText4:String = "";
		]]>
	</mx:Script>
	<mx:VBox height="100%" width="100%" horizontalAlign="center" verticalAlign="middle">
		<mx:Label text="{myText1}" color="#ffffff" fontSize="14" width="90%" />
		<mx:Text htmlText="{myText2}" width="90%" color="#ffffff" />
		<mx:Label text="{myText3}" color="#ffffff" fontSize="14" width="90%" />
		<mx:Text htmlText="{myText4}" width="90%" color="#ffffff" />
	</mx:VBox>
</mx:Canvas>