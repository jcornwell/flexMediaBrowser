<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns="*"
	width="100%" height="100%"
	creationComplete="dispatchEvent( new Event( CREATION_COMPLETE ) )">
	<mx:Script>
		<![CDATA[
		public static const CREATION_COMPLETE: String = "myCreationComplete";
		
		[Bindable]
		public var welcomeText:String = "";

		]]>
	</mx:Script>
	<mx:VBox height="100%" width="100%" horizontalAlign="center" verticalAlign="middle">
		<mx:Label text="{welcomeText}" color="#ffffff" fontSize="14" width="90%" />
	</mx:VBox>
</mx:Canvas>